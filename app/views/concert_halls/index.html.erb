<p id="notice"><%= notice %></p>

<h1>Listing Concert Halls</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>Family friendly</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concert_halls.each do |concert_hall| %>
      <tr>
        <td><%= concert_hall.name %></td>
        <td><%= concert_hall.city %></td>
        <td><%= concert_hall.state %></td>
        <td><%= concert_hall.family_friendly %></td>
        <td><%= link_to 'Show', concert_hall %></td>
        <td><%= link_to 'Edit', edit_concert_hall_path(concert_hall) %></td>
        <td><%= link_to 'Destroy', concert_hall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

